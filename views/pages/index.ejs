<%- include('../partials/head.ejs') %>
<body>
<center>
   <h1 >Task Manager  <span><%= obj.firstName %> <%= obj.lastName %> </span></h1> 

  <div class="container">
        <h2> A Simple ToDo List App </h2>
        <form action ="/addtask" method="POST">
            <input class="addtaskin" type="text" name="newtask" placeholder="add new task"  /> <button class="addtask"> Add Task </button>
    <div class="addedtask"> 
        <h2> Added Task </h2>
        <ul class="myOL"> 
          <%  for( var i=0; i< task.length; i++) {  %>
            <li> <input type="checkbox" name="check" value="<%= task[i] %>" /> <%= task[i] %> 
            </li>
          <% }  %>
        </ul>
        <br>
        <button class="remove"  formaction="/removetask" type="submit"> Remove </button>
    </div>    
        </form>
        <h2> Completed task </h2>
        <ul class="myOL">
        <%   for( var i = 0; i < complete.length; i++){   %>
        <li> <input type="checkbox" checked><%= complete[i] %> 
        </li>
        <% } %>
        </ul>
        </div>
    </div>
</center>
  
</body>
